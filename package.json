{
  "name": "mnemosyne-mcp",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/server.ts",
    "dev": "fastmcp dev src/server.ts",
    "inspect": "fastmcp inspect src/server.ts",
    "lint": "prettier --check . && eslint . && tsc --noEmit",
    "test": "vitest run",
    "format": "prettier --write . && eslint --fix ."
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "productivity",
    "fastmail",
    "airtable",
    "ai",
    "typescript",
    "fastmcp",
    "email",
    "intelligence"
  ],
  "repository": {
    "url": "https://github.com/foxtrottwist/mnemosyne-mcp"
  },
  "author": "Law Horne <hello@foxtrottwist.com>",
  "homepage": "https://lawrencehon.com/mcp",
  "type": "module",
  "license": "MIT",
  "description": "TypeScript MCP server for productivity intelligence across FastMail, Airtable, and AI services.",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "@fastify/deepmerge": "^3.1.0",
    "airtable": "^0.12.2",
    "better-sqlite3": "^12.2.0",
    "fastmcp": "^3.13.0",
    "jmap-jam": "^0.10.1",
    "openai": "^5.12.2",
    "opossum": "^9.0.0",
    "pino": "^9.7.0",
    "zod": "^3.24.4"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "node -e \"const fs=require('fs'); const pkg=require('./package.json'); const manifest=require('./manifest.json'); manifest.version=pkg.version; fs.writeFileSync('manifest.json', JSON.stringify(manifest, null, 2));\" && npm run build:dxt"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "manifest.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "shortcuts-mcp-*.dxt",
              "label": "Desktop Extension (.dxt)"
            }
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "@anthropic-ai/dxt": "^0.2.6",
    "@eslint/js": "^9.26.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@tsconfig/node22": "^22.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.1.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint-config-prettier": "^10.1.3",
    "eslint-plugin-perfectionist": "^4.12.3",
    "jiti": "^2.4.2",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vitest": "^3.1.3"
  }
}
